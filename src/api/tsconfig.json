{
  "compilerOptions": {
    "target": "ES2021",
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "baseUrl": "../../",
  },
  "include": ["**/*.ts"],
}